{
  "name": "photoslide",
  "version": "1.0.0",
  "description": "Google Photos Album Slideshow App for macOS",
  "author": {
    "name": "PhotoSlide",
    "email": "support@photoslide.app"
  },
  "license": "MIT",
  "keywords": [
    "google-photos",
    "slideshow",
    "digital-frame",
    "photo-viewer",
    "electron",
    "macos"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/photoslide/photoslide"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "electron-store": "^10.0.0",
    "react": "^19.1.3",
    "react-dom": "^19.1.3",
    "react-router-dom": "^7.1.1"
  },
  "devDependencies": {
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.photoslide.app",
    "productName": "PhotoSlide",
    "mac": {
      "category": "public.app-category.photography",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "darkModeSupport": true
    },
    "dmg": {
      "title": "PhotoSlide ${version}",
      "backgroundColor": "#ffffff"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "public/tray-iconTemplate.png",
        "to": "tray-iconTemplate.png"
      },
      {
        "from": "public/tray-iconTemplate@2x.png",
        "to": "tray-iconTemplate@2x.png"
      },
      {
        "from": ".env",
        "to": ".env"
      }
    ]
  }
}
